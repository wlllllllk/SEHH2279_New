                    <Button
                        android:id="@+id/button6"
                        android:layout_width="10dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:text="@string/Detail" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date : 11-5-2019" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Amount : 1" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Strawberrymage"
                        android:layout_width="50dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/strawberry" />

                    <TextView
                        android:id="@+id/Strawberrytext"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/Strawberry" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="10dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"
                        android:text="@string/Detail" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date : 1-5-2019" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Amount : 5" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>